{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:aic-brand-guide:brand-tokens:1.0.0",
  "title": "AI Collective Brand Tokens",
  "type": "object",
  "required": [
    "meta",
    "logos",
    "color",
    "typography",
    "motion",
    "voice",
    "remotion"
  ],
  "additionalProperties": false,
  "properties": {
    "meta": {
      "type": "object",
      "required": [
        "brand_name",
        "source_snapshot_date",
        "source_urls",
        "version"
      ],
      "additionalProperties": false,
      "properties": {
        "brand_name": { "type": "string", "minLength": 1 },
        "source_snapshot_date": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },
        "source_urls": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "format": "uri" }
        },
        "ephemeral_source_urls": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "format": "uri" }
        },
        "version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$" },
        "evidence_map_path": { "type": "string" },
        "source_refresh_procedure_path": { "type": "string" },
        "local_capture_files": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "legal_notice_path": { "type": "string" },
        "confidence_policy": { "type": "string" }
      }
    },
    "logos": {
      "type": "object",
      "required": ["logo", "logo_white", "wordmark", "wordmark_white"],
      "additionalProperties": false,
      "properties": {
        "logo": { "$ref": "#/$defs/logoAsset" },
        "logo_white": { "$ref": "#/$defs/logoAsset" },
        "wordmark": { "$ref": "#/$defs/logoAsset" },
        "wordmark_white": { "$ref": "#/$defs/logoAsset" }
      }
    },
    "color": {
      "type": "object",
      "required": ["brand", "light", "dark", "semantic"],
      "additionalProperties": false,
      "properties": {
        "brand": {
          "type": "object",
          "required": ["primary_hex", "wordmark_text_hex", "primary_hsl", "confidence"],
          "additionalProperties": false,
          "properties": {
            "primary_hex": { "$ref": "#/$defs/hexColor" },
            "wordmark_text_hex": { "$ref": "#/$defs/hexColor" },
            "primary_hsl": { "$ref": "#/$defs/hslTriplet" },
            "confidence": { "$ref": "#/$defs/confidence" }
          }
        },
        "light": { "$ref": "#/$defs/themePalette" },
        "dark": { "$ref": "#/$defs/themePalette" },
        "semantic": {
          "type": "object",
          "required": ["success_hsl", "warning_hsl", "danger_hsl", "info_hsl", "unknown_policy"],
          "additionalProperties": false,
          "properties": {
            "success_hsl": { "$ref": "#/$defs/hslTriplet" },
            "warning_hsl": { "$ref": "#/$defs/hslTriplet" },
            "danger_hsl": { "$ref": "#/$defs/hslTriplet" },
            "info_hsl": { "$ref": "#/$defs/hslTriplet" },
            "unknown_policy": { "type": "string" }
          }
        }
      }
    },
    "typography": {
      "type": "object",
      "required": [
        "sans",
        "serif",
        "heading_family",
        "body_family",
        "fallbacks",
        "weights",
        "confidence"
      ],
      "additionalProperties": false,
      "properties": {
        "sans": { "type": "string" },
        "serif": { "type": "string" },
        "heading_family": { "type": "string" },
        "body_family": { "type": "string" },
        "fallbacks": {
          "type": "object",
          "required": ["sans", "serif"],
          "additionalProperties": false,
          "properties": {
            "sans": { "type": "array", "items": { "type": "string" } },
            "serif": { "type": "array", "items": { "type": "string" } }
          }
        },
        "weights": {
          "type": "object",
          "required": ["light", "regular", "semibold", "bold", "black"],
          "additionalProperties": false,
          "properties": {
            "light": { "type": "integer" },
            "regular": { "type": "integer" },
            "semibold": { "type": "integer" },
            "bold": { "type": "integer" },
            "black": { "type": "integer" }
          }
        },
        "confidence": { "$ref": "#/$defs/confidence" }
      }
    },
    "motion": {
      "type": "object",
      "required": [
        "principles",
        "durations_ms",
        "easing",
        "reduced_motion_policy",
        "confidence"
      ],
      "additionalProperties": false,
      "properties": {
        "principles": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
        "durations_ms": {
          "type": "object",
          "required": ["micro", "standard", "hero"],
          "additionalProperties": false,
          "properties": {
            "micro": { "type": "integer", "minimum": 1 },
            "standard": { "type": "integer", "minimum": 1 },
            "hero": { "type": "integer", "minimum": 1 }
          }
        },
        "easing": {
          "type": "object",
          "required": ["default", "inference_note"],
          "additionalProperties": false,
          "properties": {
            "default": { "type": "string" },
            "inference_note": { "type": "string" }
          }
        },
        "reduced_motion_policy": { "type": "string" },
        "confidence": { "$ref": "#/$defs/confidence" }
      }
    },
    "voice": {
      "type": "object",
      "required": [
        "tone",
        "approved_phrases",
        "discouraged_patterns",
        "do",
        "dont",
        "confidence"
      ],
      "additionalProperties": false,
      "properties": {
        "tone": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
        "approved_phrases": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
        "discouraged_patterns": { "type": "array", "items": { "type": "string" } },
        "do": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
        "dont": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
        "confidence": { "$ref": "#/$defs/confidence" }
      }
    },
    "remotion": {
      "type": "object",
      "required": [
        "defaults",
        "scene_pacing",
        "title_rules",
        "caption_rules",
        "safe_zone",
        "audio_direction"
      ],
      "additionalProperties": false,
      "properties": {
        "defaults": {
          "type": "object",
          "required": ["fps", "duration_seconds", "aspect_ratios"],
          "additionalProperties": false,
          "properties": {
            "fps": { "type": "integer", "minimum": 1 },
            "duration_seconds": { "type": "integer", "minimum": 1 },
            "aspect_ratios": {
              "type": "array",
              "minItems": 1,
              "items": { "type": "string", "enum": ["16:9", "9:16", "1:1", "4:5"] }
            }
          }
        },
        "scene_pacing": {
          "type": "object",
          "required": ["hook_seconds", "content_seconds", "cta_seconds"],
          "additionalProperties": false,
          "properties": {
            "hook_seconds": { "type": "integer", "minimum": 1 },
            "content_seconds": { "type": "integer", "minimum": 1 },
            "cta_seconds": { "type": "integer", "minimum": 1 }
          }
        },
        "title_rules": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
        "caption_rules": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
        "safe_zone": {
          "type": "object",
          "required": ["top_percent", "bottom_percent", "side_percent"],
          "additionalProperties": false,
          "properties": {
            "top_percent": { "type": "integer", "minimum": 0, "maximum": 50 },
            "bottom_percent": { "type": "integer", "minimum": 0, "maximum": 50 },
            "side_percent": { "type": "integer", "minimum": 0, "maximum": 50 }
          }
        },
        "audio_direction": { "type": "array", "items": { "type": "string" }, "minItems": 1 }
      }
    }
  },
  "$defs": {
    "confidence": {
      "type": "string",
      "enum": ["high", "medium", "low"]
    },
    "hexColor": {
      "type": "string",
      "pattern": "^#[0-9a-fA-F]{6}$"
    },
    "hslTriplet": {
      "type": "string",
      "pattern": "^[0-9]{1,3}(\\.[0-9]+)? [0-9]{1,3}(\\.[0-9]+)?% [0-9]{1,3}(\\.[0-9]+)?%$"
    },
    "logoAsset": {
      "type": "object",
      "required": ["url", "viewBox", "aspect_ratio", "intended_background", "primary_fill_hex", "confidence"],
      "additionalProperties": false,
      "properties": {
        "url": { "type": "string", "format": "uri" },
        "viewBox": { "type": "string" },
        "aspect_ratio": { "type": "number", "exclusiveMinimum": 0 },
        "intended_background": { "type": "string", "enum": ["light", "dark", "any"] },
        "primary_fill_hex": { "$ref": "#/$defs/hexColor" },
        "confidence": { "$ref": "#/$defs/confidence" }
      }
    },
    "themePalette": {
      "type": "object",
      "required": [
        "background",
        "foreground",
        "primary",
        "primary_foreground",
        "accent",
        "accent_foreground",
        "muted",
        "muted_foreground",
        "border",
        "input",
        "ring",
        "radius"
      ],
      "additionalProperties": false,
      "properties": {
        "background": { "$ref": "#/$defs/hslTriplet" },
        "foreground": { "$ref": "#/$defs/hslTriplet" },
        "primary": { "$ref": "#/$defs/hslTriplet" },
        "primary_foreground": { "$ref": "#/$defs/hslTriplet" },
        "accent": { "$ref": "#/$defs/hslTriplet" },
        "accent_foreground": { "$ref": "#/$defs/hslTriplet" },
        "muted": { "$ref": "#/$defs/hslTriplet" },
        "muted_foreground": { "$ref": "#/$defs/hslTriplet" },
        "border": { "$ref": "#/$defs/hslTriplet" },
        "input": { "$ref": "#/$defs/hslTriplet" },
        "ring": { "$ref": "#/$defs/hslTriplet" },
        "radius": { "type": "string" }
      }
    }
  }
}
